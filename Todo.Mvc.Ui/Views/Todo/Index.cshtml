@model IEnumerable<SmartIT.Employee.MockDB.Todo>
@{
  ViewData["Title"] = "Index";
}
<h2>Ola,Dayse</h2>
<p>
  <a asp-action="Create">Criar novo contacto</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Id)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Name)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
